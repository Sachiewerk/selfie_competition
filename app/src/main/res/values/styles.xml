<resources>

    <style name="WitTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/dialogText</item>
        <item name="android:textColorPrimary">@color/dialogText</item>
        <item name="android:windowBackground">@drawable/custom_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="alertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/alertDialogText</item>
        <item name="android:textColorPrimary">@color/alertDialogText</item>
        <item name="android:windowBackground">@drawable/custom_alert_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="progressBarDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/darkGrey</item>
    </style>

    <style name="imageFrameDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/darkGrey</item>
        <item name="android:padding">0.5dp</item>
    </style>

    <style name="WitTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorMain</item>
    </style>

    <style name="WitTheme.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WitTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="colorPrimary">@color/background</item>
    </style>

    <style name="WitTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
